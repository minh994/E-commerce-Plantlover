@model Cs_Plantlover.Models.BlogDetail
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "EditBlog";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<h1 class="text-center">Hãy Sửa Blog Của Bạn</h1>

<hr />
<p>@TempData["Message"]</p>
<div class="row">
    <div class="col-md-12">
        <form method="post" asp-action="EditBlog" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HinhAnh" class="control-label">Ảnh cho bài viết</label>
                <input asp-for="HinhAnh" type="file" class="form-control" />
                <span asp-validation-for="HinhAnh" class="text-danger"></span>
                @* Hidden field to retain the existing image path *@
                <input type="hidden" name="existingImagePath" value="@Model.HinhAnh" />
                @if (!string.IsNullOrEmpty(Model.HinhAnh))
                {
                    <div>
                        <p>Ảnh hiện tại:</p>
                        <img src="@Model.HinhAnh" alt="Current Image" style="max-width: 200px; height: auto;" />
                    </div>
                }
            </div>

            <div class="form-group">
                <label asp-for="Description">Description</label>
                <textarea id="MoTa" asp-for="Description" name="description"placeholder="Mô tả"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreateAt" class="control-label"></label>
                <input asp-for="CreateAt" class="form-control" />
                <span asp-validation-for="CreateAt" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <input asp-for="UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MaChucNang" class="control-label"></label>
                <input asp-for="MaChucNang" class="form-control" />
                <span asp-validation-for="MaChucNang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaViTri" class="control-label"></label>
                <input asp-for="MaViTri" class="form-control" />
                <span asp-validation-for="MaViTri" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="DanhMucBlog" class="btn btn-primary">Trở lại danh sách</a>
</div>

