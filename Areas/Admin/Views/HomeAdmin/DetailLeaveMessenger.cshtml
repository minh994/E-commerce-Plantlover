@model Cs_Plantlover.Models.LeaveMessenger
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "DetailLeaveMessenger";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<h2 class="text-center">Chi Tiết Tin Nhắn Khách Hàng</h2>
<hr />
<div class="container mt-10">
    <div class="card common-card">
        <div class="card-header text-white text-center">
            <h3>Tin Nhắn</h3>
        </div>
        <div class="card-body">
            <p><strong>Tên khách hàng:</strong> @Model.FullName ---*****</p>
            <p><strong>Email: </strong> @Model.Email ---*****</p>
            <p><strong>Tin nhắn: </strong> @Html.Raw(Model.Messenger) </p>
        </div>
    </div>
</div>
<div>
    <a asp-action="LeaveMessenger" class="btn btn-primary ">Trở lại danh sách</a>
</div>
<style>
    .container {
        max-width: 800px;
    }

    .common-card {
        border: 1px solid #dee2e6;
        border-radius: 0.25rem;
        box-shadow: 0 2px 3px rgba(0, 0, 0, 0.3);
        margin-bottom: 20px;
    }

    .card-header {
        background-color: #7eae37;
        color: white;
    }

    .card-body p {
        margin-bottom: 0.5rem;
    }

    

</style>